@model Furry_Community.Models.VseZayavkiPapka.ZayavkiVseClass

<h1>
    Страница для ответа на заявку  Id = @Model.id_zayavki <br />
    И Id пользователя = @Model.vse_it_is_me.FirstOrDefault().ID_I
</h1>

<ul>
    <li>
        Имя: @Model.vse_it_is_me.FirstOrDefault().First_name
    </li>
    <li>
        Фамилия: @Model.vse_it_is_me.FirstOrDefault().Second_name
    </li>
    <li>
        Отчество: @Model.vse_it_is_me.FirstOrDefault().Patronymic
    </li>
    <li>
        Телефон: @Model.vse_how_to_contact_me.FirstOrDefault().tepelhone
    </li>
    <li>
        email: @Model.vse_how_to_contact_me.FirstOrDefault().email
    </li>
    @{ if (!(Model.vse_it_is_me.FirstOrDefault().Photo is null))
        {

            var base64 = Convert.ToBase64String(Model.vse_it_is_me.FirstOrDefault().Photo);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            <li>
                Фото:<br />
                <img src="@imgSrc" style="width:190px;height:190px;">
            </li>

        }

    }
</ul>

@{

    if (!(Model.vse_help.FirstOrDefault().How_can_i_help is null))
    {
        <p>
            @Model.vse_help.FirstOrDefault().How_can_i_help
        </p>
    }
    else
    {
        <p>
            @Model.vse_help.FirstOrDefault().What_help_do_I_need
        </p>
    }


}
@{
    ViewBag.ThisClass = Model;
}

@using (Html.BeginForm("Otpravit_otvet_polzovatelu", "Main"))
{
    ViewBag.ThisClass = Model;
    <p>
        <textarea id="otvetPolzovatelu" name="otvetPolzovatelu">

    </textarea>
    </p>

    <input type="submit" value="Отправить ответ">
}


