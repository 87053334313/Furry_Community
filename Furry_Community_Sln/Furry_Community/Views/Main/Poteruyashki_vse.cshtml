

<div>
    <h1>Потерявшиеся животные</h1>
    <table style="width:100%;">
        <thead>
            <tr>
                <td>Награда</td>    <td>Информация</td>    <td>ID Человека который потерял питомца</td> <td>Фото</td>
            </tr>
        </thead>
        <tbody>
            @{ 
                foreach(Furry_Community.Models.DataBase.I_have_lost x in (IEnumerable<Furry_Community.Models.DataBase.I_have_lost>)ViewData["poteryashki"])
                {
                    <tr>
                        <td>@x.advertisment</td>    <td>@x.support</td> <td>@x.ssylka_id</td>   
                      
                        
                        <td>
                        @{if (x.photo is null)
                            {
                                <i>нет фото</i>
                            }
                            else
                            {
                                var base64 = Convert.ToBase64String(x.photo);
                                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

                                <img src="@imgSrc" style="width:190px;height:190px;">
                            }}
                        </td>



                    </tr>
                }
            }
        </tbody>
    </table>
</div>

